page{
  height: 100%;
}
.xiala{
  display: inline-block;
  font-size: 30rpx;
  width: 33.333%;
  
  text-align: center;
  box-sizing: border-box;
  border-right: 1px solid #f0f0f0;
  color: #7e7d7d;
}
.xiala image{
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top:13rpx;
}
.xiala:nth-child(3){
  border-right:none;
}
.wrap{
  background-color: white;
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}
.my_text{
  margin: 0 15rpx;
}
.eac{
  background-color: #f5f5f5;
  height: 800rpx;
  overflow-x: hidden;
  position: relative;
  

}
.e2{
  position: absolute;
  top: 0;
  left:0;
  background-color: white;
  width: 100%;
  
}
.a2{
  font-size: 30rpx;
  overflow:hidden;
  padding: 20rpx 35px 20rpx 20px;
  box-sizing: border-box;
  position: relative;
}
.a2_left{
  float:left;
}
.a2_right{
  float: right;
  color: #888888;
}
.a2_image{
  
  width: 21px;
  height: 21px;
  color: red;
  float: left;
}
.c2{
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.3);
  width: 100%;
  position: absolute;
  z-index: -1;

}
.a2_bac{
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  
  border-top: 1px solid #f1f1f1;
}
.e1_top>text{
  display: inline-block;
  width: 50%;
  text-align: center;
  font-size: 30rpx;
  padding: 20rpx 0;
  background-color: white;
}
.e1_left{
  background-color: #e4e3e3;
  font-size: 30rpx;
}
.a1_text{
  display: inline-block;
  width: 100%;
  padding:15rpx;
  background-color: white;
}
.eac_wrap{
  overflow: hidden;
  height: 650rpx;

}
.left_ove{
  width: 35%;
  overflow-x: hidden;
   height: 650rpx;
   float: left;
   box-sizing: border-box;
   background-color: white;
}
.right_ove{
  float: right;
  width: 65%;
  box-sizing: border-box;
  background-color: #f5f5f5;
  height: 100%;
}
.right_eac{
  background-color: white;
  padding:  20rpx;

}
.title_1{
  font-size: 35rpx;
  margin-bottom: 20rpx;
}
.wrap_1{
  display: inline-block;
  border: 1px #e4e3e3 solid;
  width: 20%;
  line-height: 40rpx;
  border-radius: 10rpx;
  text-align: center;
  padding: 10rpx;
  font-size: 30rpx;
  margin-right: 1.5%;
  height: 40rpx;
  
}
.title_2{
  font-size: 35rpx;
  margin-top: 20rpx;
}
.wrap_2{
  display: inline-block;
  border: 1px #e4e3e3 solid;
  width: 250rpx;
  border-radius: 10rpx;
  text-align: center;
  padding: 10rpx;
  font-size: 30rpx;
  margin-right: 1.5%;
  line-height: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
}
.color_red{
  border: 1px solid red;
  background-color: rgba(255, 0 ,0, 0.2);
  color: red;
}